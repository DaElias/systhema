// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model User {
    id        Int       @id @default(autoincrement())
    name      String
    last_name String
    contact   String?
    email     String    @unique
    password  String
    createdAt DateTime? @default(now())
    role      Role?     @default(USER)
}

enum Role {
    USER
    ADMIN
}

model Customers {
    id        Int     @id @default(autoincrement())
    name      String
    last_name String
    address   String?

    city    String?
    provice String?

    contact_1 String
    contact_2 String?

    email_1 String?
    email_2 String?

    zip_code     String?
    fiscale_code String?

    createdAt DateTime? @default(now())

    Element Element[]
}

model Element {
    id                   Int     @id @default(autoincrement())
    name                 String
    description          String? @db.Text
    delivery_description String? @db.Text

    state     State     @default(IN_PROCESS)
    updatedAt DateTime? @default(now()) @updatedAt
    createdAt DateTime? @default(now())
    value     Float?    @default(0)

    Customers   Customers? @relation(fields: [customer_id], references: [id])
    customer_id Int?

    Category    Category? @relation(fields: [category_id], references: [id])
    category_id Int?

    @@index([customer_id])
    @@index([category_id])
}

enum State {
    READY
    IN_PROCESS
    WAITING
    HAS_NO_REPAIR
}

model Category {
    id          Int       @id @default(autoincrement())
    name        String    @unique
    description String?
    updatedAt   DateTime? @default(now()) @updatedAt
    createdAt   DateTime? @default(now())
    Element     Element[]
}
